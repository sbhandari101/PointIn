<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#ffffff" />

            <stroke
                android:width="1dp"
                android:color="#000000"
                />

            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>

