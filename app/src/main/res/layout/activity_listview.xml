<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listcard"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="right"
        android:background="@drawable/cardheaderborder"
        android:minHeight="40dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imageView3"
            android:src="@drawable/facebooktop"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imageView7"
            android:layout_gravity="center"
            android:src="@drawable/deletetop"
            android:layout_marginLeft="12dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imageView8"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:src="@drawable/sharevariant"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="@drawable/border"
        android:minHeight="100dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:minHeight="30dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:id="@+id/imgL">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:background="#f0f0f0" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/textL">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/date"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:hint="- -"
                                android:textSize="14dp"
                                android:text="3 km away"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"
                                android:paddingTop="3dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="3dp"
                                android:background="#9a318DFA" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="TextView"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:layout_alignParentTop="false"
                                android:layout_toRightOf="@+id/date"
                                android:layout_toEndOf="@+id/date"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11/1/2016"
                            android:id="@+id/distance"
                            android:paddingLeft="6dp"
                            android:textSize="10dp"
                            android:textColor="@color/colorTheme" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:minHeight="35dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="- -"
                        android:id="@+id/textView3"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:singleLine="false"
                        android:ellipsize="end"
                        android:maxLines="2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:minHeight="35dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shareAsEventL"
            android:weightSum="1"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView2"
                android:src="@drawable/event" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Share as event"
                android:id="@+id/shareAsEvent"
                android:textColor="#343434"
                android:textSize="13dp"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="normal"
                android:layout_marginLeft="6dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:src="@drawable/address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Share as address"
                android:id="@+id/shareAsAddress"
                android:textColor="#343434"
                android:textSize="12dp"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="normal"
                android:layout_marginLeft="6dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
